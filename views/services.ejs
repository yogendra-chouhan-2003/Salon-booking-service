<!DOCTYPE html>
<html lang="en">
<head>
  <title>Our Services - Apna Salon</title>
  <%- include("__bootstrap.ejs") %>
  <style>
    .card:hover {
      transform: translateY(-5px);
      transition: all 0.3s ease-in-out;
    }
  </style>
</head>
<body>

  <%- include("header.ejs") %>

  <div class="container py-5">
    <h2 class="text-center mb-5 fw-bold">Our Popular Salon Services</h2>

    <div class="row g-4">
      <% for (let product of products) { %>
        <div class="col-md-6 col-lg-4 " >
          <div class="card shadow-lg h-100 ">
            <img src="<%= product.img %>" class="card-img-top" alt="<%= product.title %>">
            
            <div class="card-body d-flex flex-column" style="box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.751);">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0"><%= product.title %></h5>
                <span class="badge badge-custom"><%= product.gender %></span>
              </div>
              <div class="mb-2">
                <strong>Price:</strong> â‚¹<%= product.price %> &nbsp;|&nbsp;
                <strong>Duration:</strong> <%= product.duration %> mins
              </div>

              <div class="mb-2">
                <strong>Category:</strong> <%= product.category %><br>
              </div>

              <a href="/services/<%= product.id %>" class="btn btn-dark mt-auto w-100">View Details</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>


  <%- include("footer.ejs") %>
</body>
</html>
