<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= product.title %> - Service Details | Apna Salon</title>
    <%- include("__bootstrap.ejs") %>
    <style>
      .fade-in {
        animation: fadeIn 0.6s ease-in-out;
      }
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .tag-badge {
        background-color: #f0f0f0;
        color: #333;
        font-size: 0.8rem;
        border-radius: 12px;
        padding: 0.3rem 0.6rem;
        margin-right: 0.4rem;
        margin-bottom: 0.4rem;
        display: inline-block;
      }
      .service-img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        max-height: 100%;
      }
    </style>
  </head>
  <body>
    <%- include("header.ejs") %>

    <div class="container my-5 fade-in" >
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden" >
        <div class="row g-0" >
          <!-- Left: Image -->
          <div class="col-md-5" style="box-shadow: 20px 10px 10px rgba(0, 0, 0, 0.2); border-radius: 12px; overflow: hidden;" >
            <img src="<%= product.img %>" alt="<%= product.title %>" class="img-fluid service-img h-100">
          </div>

          <!-- Right: Details -->
          <div class="col-md-7 p-5" >
            <div class="d-flex justify-content-between align-items-center flex-wrap mb-2">
              <h2 class="fw-bold text-capitalize mb-3"><%= product.title %></h2>
              <% if (product.brand) { %>
                <span class="badge text-dark" style="font-size: 20px;">Brand: <%= product.brand %></span>
              <% } %>
            </div>

            <% if (product.offer) { %>
              <span class="badge bg-danger"><%= product.offer%> OFF</span>
            <% } %>

            <p class="text-muted fs-5 pt-3"><%= product.description %></p>

            <ul class="list-group list-group-flush mb-3">
              <li class="list-group-item"><strong>Category :  </strong> <%= product.category %></li>
              <li class="list-group-item"><strong>Duration :  </strong> <%= product.duration %></li>
              <li class="list-group-item"><strong>Gender :  </strong> <%= product.gender %></li>
              <li class="list-group-item"><strong>Rating :  </strong> ⭐ <%= product.rating %>/5</li>
              <li class="list-group-item"><strong>Price :  </strong>  ₹<%= product.price %> Rs</li>
            </ul>

            <a href="/services/booking/<%= product.id %>" class="btn btn-success btn-lg mt-3 w-100 shadow-sm">
              <i class="bi bi-calendar2-check-fill me-2"></i> Book Now
            </a>
          </div>
        </div>
      </div>
    </div>

    <%- include("footer.ejs") %>
  </body>
</html>
